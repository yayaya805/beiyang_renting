/* pages/home/home.wxss */
.select-box{
    width: 100%;
    display: inline-flex;
    text-align: center;
    padding: 5px 0px;
    background-color: #ffffff;
    
}

.select-box view{
    width: 100%;
    height: 197rpx;
    margin:auto; 
}

.select-box image{
    width: 90%;
    height: 220rpx;
}


.header-box {
    height: 70px;
    padding-top: 5px;
    padding-bottom: 20px;
    background-color: #FFFFFF;
}

.header-row {
    height: 50%;
    margin-top: 8px;
    /* background-color: honeydew; */
}

.header-cell {
    width: 25%;
    height: 100%;
    display: inline-block;
    text-align: center;
    /* background-color: #b90fb1; */
}

.header-cell image {
    width: 50px;
    height: 50px;
    /* background-color: #0f7bb9; */
}

.text-color {
    color: #181818;
}

.banner-box {
    height: 70px;
    /* margin-top: 8px; */
    text-align: center;
    background-color: #fff;
}

.banner-box image {
    width: 80%;
    height: 70px;
    margin-top: 0px;
}

.noticeBar-box {
    height: 35px;
}

.recommendation-box {
    height: 40px;
    margin-top: 10px;
    background-color: #FFFFFF;
}

.recommendation-text {
    height: 40px;
    line-height: 40px;
    font-size: 16px;
    font-weight: bold;
    padding-left: 8px;
    color: #283760;

}

.recommendation-list-box{
    position: relative;
    box-sizing: border-box;
    padding: 8px 16px;
    font-size: 12px;
    color: #323233;
    margin-top:5px;
    background-color: #FFFFFF;
}

.card {
    display: flex;
    display: -webkit-flex;
}

.card-left {
    position: relative;
    -webkit-box-flex: none;
    flex: none;
    width: 90px;
    height: 90px;
    margin-top: 10px;
    margin-right: 8px;
}

.card-left image {
    width: 100%;
    height: 100%;
}

.card-right {
    position: relative;
    -webkit-box-flex: 1;
    flex: 1;
    min-width: 0;
}

.card-title {
    font-size: 14px;
    font-weight: 900;
    line-height: 16px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 描述 */

.card-content-box {
    width: 100%;
    height: 70px;
    margin-top: 12px;
    /* background-color: #ee0a24; */
}

.card-content-box-row-top {
    width: 100%;
    height: 40px;
    /* background-color: #9e2260; */
}

.card-content-box-row-bottom {
    width: 100%;
    /* height: 30px; */
    margin-top: 5px;
    /* background-color: #c722bf; */
}

.content-row {
    width: 100%;
    height: 20px;
    /* background-color: #19b9a4; */
}

/* 标签 */

.bg-tag{
    background-color:#F6F7FB;
    color:#677EA8;
}

.price-text{
    font-size: 14px;
    color:#EB4340;
}

/* 左上角的标签 */

.card-tag {
    display: inline-flex;
    -webkit-align-items: center;
    align-items: center;
    line-height: normal;
    padding: 0.2em 0.5em;
    color: #fff;
    font-size: 10px;
    border-radius: 0.2em;
}

.card-tag-box {
    position: absolute;
    top: 2px;
    left: 0;
}

.card-tag:after {
    border-color: currentColor;
    border-radius: 0.2em * 2;
}

.card-tag-mark, .card-tag-mark:after {
    border-radius: 0 999px 999px 0;
}

.card-tag-mark {
    padding-right: 0.7em;
}

.card-tag-bg {
    background-color:	#7194CC
}