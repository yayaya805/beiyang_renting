/* pages/houseDetail/houseDetail.wxss */

page {
    background-color: #f0f0f0;
}

/* 轮播 */

.swiper swiper {
    width: 100%;
    height: 200px;
    /* background-color: blue; */
}

/* 简介 */

.headerBox {
    width: 100%;
    padding: 8px 0;
    background-color: #fff;
}

.headerBox-row-title {
    /* width: 100%; */
    /* height: 20px; */
    margin-top: 5px;
    padding-left: 5px;
    padding-right: 5px;
}

.headerBox-row {
    /* width: 100%; */
    height: 20px;
    margin-top: 5px;
    padding-left: 5px;
    padding-right: 5px;
}

.headerBox-tag {
    line-height: normal;
}

.content-tag {
    display: inline-flex;
    -webkit-align-items: center;
    align-items: center;
    line-height: normal;
    padding: 0.2em 0.5em;
    color: #fff;
    font-size: 10px;
    border-radius: 0.2em;
}

/* 房产中介 */

.houseAgent-box {
    /* width: 100%; */
    height: 60px;
    margin-top: 8px;
    padding: 8px 0;
    background-color: #fff;
}

.houseAgent-box view {
    /* display: inline-flex; */
    display: inline-block;
}

.houseAgent-box-portrait {
    width: 60px;
    height: 60px;
    /* background-color: beige; */
}

.houseAgent-box-portrait image {
    width: 50px;
    height: 50px;
    margin: 5px;
    /* border-radius: 50%; */
}

.Contact-box {
    /* width: 40px; *//* height: 50px; */
    margin: 10px;
    /* background-color: lightcoral; */
}

.contact-box-right {
    width: 70px;
    height: 60px;
    margin-right: 15px;
    /* background-color: aqua; */
}

.contact-box-right-view {
    margin-left: 12px;
}

.contact-box-right-view image {
    width: 35px;
    height: 35px;
    /* background-color: khaki; */
}

/* 房源介绍 */

.introduce-box {
    margin-top: 8px;
    margin-bottom: 60px;
    padding: 8px;
    background-color: #fff;
}

.introduce-box-title {
    margin: 8px 0;
    font-size: 16px;
    font-weight: bold;
}

.introduce-box-content {
    margin-left: 15px;
    padding: 5px;
    font-size: 12px;
    border-bottom: 1rpx #f0f0f0 dashed;
}

/* 底部导航栏 */

.footerBar {
    width: 100%;
    height: 50px;
    position: fixed;
    left: 0;
    bottom: 0;
    border-top: 1rpx solid #f0f0f0;
    background-color: #fff;
}

.footer-left {
    width: 60%;
    height: 50px;
    padding-top: 3px;
    /* background-color: rgb(255, 0, 200); */
}

.footer-item {
    width: 50px;
    height: 50px;
    margin-left: 5px;
    display: inline-block;
    text-align: center;
    /* background: #fff; */
}

.footer-item image {
    width: 25px;
    height: 25px;
    /* background: #fff; */
}

.footer-right {
    width: 40%;
    height: 100%;
    line-height: 50px;
    text-align: center;
    font-size: 14px;
    font-weight: bold;
    color: #fff;
    background-color: #2aa515;
}


/* 字体颜色 */

.text-price {
    color: orangered;
}

.text-grey {
    color: grey;
}

.title-text-font-weight {
    font-weight: bold;
}
